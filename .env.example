# API Keys - Add your keys here
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here
GROQ_API_KEY=gsk_your-groq-key-here

# Vector DB Configuration
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
USE_CHROMADB=true  # Set to true for local ChromaDB, false for Pinecone

# Database
DATABASE_URL=sqlite:///./warmstart.db
# For PostgreSQL: postgresql://user:password@localhost:5432/warmstart

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cost Limits (USD)
MAX_COST_PER_EXPERIMENT=100.0
MAX_COST_PER_GENERATION=5.0

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_MINUTE=90000

# Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090

# MLflow (optional)
MLFLOW_TRACKING_URI=./experiments/mlruns
MLFLOW_EXPERIMENT_NAME=warmstart

# Safety
ENABLE_CONTENT_FILTER=true
MAX_PROMPT_LENGTH=8000
